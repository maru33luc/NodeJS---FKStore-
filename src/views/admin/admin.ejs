<!DOCTYPE html>
<html lang="en">
    <%- include ('../partials/head') %>

<body>
        <%- include ('../partials/admin-header') %>
    <main id="admin" class="container">
        <section class="admin__search">
            <iconify-icon class="admin__icon" icon="charm:search"></iconify-icon>
            <input class="admin__search-bar" type="text" name="search" id="search" placeholder="código, nombre o categoria">
        </section>
        <section class="admin__list">
            <div class="admin__header">
                <h2>LISTADO DE PRODUCTOS</h2>
                <span>AGREGAR<a href="/admin/create"><iconify-icon icon="bxs:plus-square" class="add__article-plus-square"></iconify-icon></a></span>
            </div>
            <div class="admin-table">
                <header class="admin-table__header">
                    <h3>ID</h3>
                    <h3>Código</h3>
                    <h3>Nombre del Producto</h3>
                    <h3>Categoría</h3>
                </header>
                <% funkos.forEach(funko => { %>
                <article class="admin-table__row">
                    <p><%= funko.product_id %></p>
                    <p><%= funko.product_sku %></p>
                    <p><%= funko.product_name %></p>
                    <p><%= funko.category_name %></p>
                    <a href="/admin/edit/<%= funko.product_id %>"><iconify-icon icon="mdi:pencil" class="edit__article-pincel"></iconify-icon></a>
                    <a href="/admin/delete/<%= funko.product_id %>"><iconify-icon icon="heroicons-solid:trash" class="delete__article-trash"></iconify-icon></a>
                </article>
                <% }); %>
                
            </div>
        </section>
    </main>
    <%- include ('../partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.7/dist/iconify-icon.min.js"></script>
    <script src="../../js/app.js"></script>
</body>
</html>