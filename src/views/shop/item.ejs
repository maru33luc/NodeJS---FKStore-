<!DOCTYPE html>
<html lang="en">

<%- include ('../partials/head') %>

<body>
    <%- include ('../partials/header') %>

    <main class="main-container">
        <%- include ('../partials/error') %>
        <p class="error-message__text" id="error"></p>
        <section class="item">
            
            <picture class="item__img card-item__cover">
                <img class="card-item__img--front" src="<%= funko['img-front'] %>" alt="">
                <img class="card-item__img--back" src="<%= funko['img-back'] %>" alt="">
            </picture>
            <article class="item__info">
                <p class="card-item__licence"><%= funko.licence_name %></p>
                <h3 class="card-item__name"><%= funko.product_name %></h3>
                <p class="item__description"><%= funko.product_description %></p>
                <p class="card-item__price">$<%= funko.product_price %></p>
                <div class="item__cart">
                    <button id="substract" class="item__quantity " type="button">-</button>
                    <input class="item__input" type="text" name="quantity" id="quantity" placeholder="0" disabled>
                    <button id="add" class="item__quantity" type="button">+</button>

                    <button class="item__submit btn btn--primary btn--medium " type="submit" 
                    id="btn-add-Cart" data-item-id="<%= funko.product_id %>"
                    <% if (user) { %>
                        data-user-id="<%= user.id %>"
                    <% } %>
                    >Agregar al carrito</button>
                </div>
                <p class="item__promo">
                    <a href="">Ver Metodos de Pago</a> - 3 CUOTAS SIN INTERES
                </p>
            </article>
        </section>
        <%- include ('../partials/slider') %>


    </main>

    <%- include ('../partials/footer') %>
    
    <script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@glidejs/glide"></script>
    <script src="../../js/glide.js"></script>
    <script src="../../js/app.js"></script>
    <script type="module" src="../../js/item.js"></script>
</body>

</html>